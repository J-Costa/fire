<section class="bg-white">
  <div class="lg:grid lg:min-h-screen lg:grid-cols-12">
    <section class="relative flex h-32 items-end bg-gray-900 lg:col-span-5 lg:h-full xl:col-span-6">
      <img
        alt=""
        src="https://images.unsplash.com/photo-1617195737496-bc30194e3a19?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
        class="absolute inset-0 h-full w-full object-cover opacity-80"
      />

      <div class="hidden lg:relative lg:block lg:p-12">
        <a class="block text-white" href="/">
          <span class="sr-only">Home</span>

          <h2 class="mt-6 text-2xl font-bold text-white sm:text-3xl md:text-4xl">
            Krypton Treinamentos
          </h2>

          <p class="mt-4 leading-relaxed text-white/90">
            Escola de bombeiros e cursos
          </p>
        </a>

      </div>
    </section>

    <main
      class="flex items-center justify-center px-8 py-8 sm:px-12 lg:col-span-7 lg:px-16 lg:py-12 xl:col-span-6"
    >
      <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-lg text-center">
          <h1 class="text-2xl font-bold sm:text-3xl">Acesso de administradores e funcion√°rios</h1>

          <%# <p class="mt-4 text-gray-500">
            Se for aluno clique aqui link_to
          </p> %>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mx-auto mb-0 mt-8 max-w-md space-y-4") do |f| %>
          <div>
            <%= f.label :email, class: "block text-xs font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm focus-within:border-red-600 focus-within:ring-1 focus-within:ring-red-600" %>
          </div>
          <div>
            <%= f.label :password, class: "block text-xs font-medium text-gray-700" %>
            <%= f.password_field :password, class: "mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm focus-within:border-red-600 focus-within:ring-1 focus-within:ring-red-600" %>
          </div>
          <div class="flex items-center justify-between mt-2">
            <p class="text-sm text-gray-500">
              Esqueceu a senha?
              <%= link_to "Recuperar", new_admin_password_path, class: "underline hover:text-red-400" %>
            </p>
            <%= f.submit "Login", class: "inline-block rounded-lg hover:bg-red-500/75 bg-red-500 px-5 py-3 text-sm font-medium text-white cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</section>
