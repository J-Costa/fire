<section class="overflow-hidden bg-gray-50 sm:grid sm:grid-cols-2">
  <% @courses.each_with_index do |course, i| %>
    <% if i.odd? %>
      <%= image_tag course.marketing, alt: course.name, class: "hidden sm:inline sm:h-full" if course.marketing.attached? %>
    <% end %>
    <div class="p-8 md:p-12 lg:px-16 lg:py-24">
      <div class="mx-auto max-w-xl text-center ltr:sm:text-left rtl:sm:text-right">
        <h2 class="text-2xl font-bold text-gray-900 md:text-3xl">
          <%= course.name %>
        </h2>
        <p class="hidden text-gray-500 md:mt-4 md:block">
          <%= course.description %>
        </p>
        <div class="mt-4 md:mt-8">
          <%= link_to "Saiba mais", course_path(course), class: "inline-block rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-red-700 focus:ring-3 focus:ring-yellow-400 focus:outline-hidden" %>
        </div>
      </div>
    </div>
    <% if i.even? %>
      <%= image_tag course.marketing, alt: course.name, class: "hidden sm:inline sm:h-full" if course.marketing.attached? %>
    <% end %>
    <div class="w-full block sm:hidden mb-8">
      <%= image_tag course.marketing, alt: course.name, class: "h-56 w-full object-cover rounded-lg shadow-md" if course.marketing.attached? %>
    </div>
  <% end %>
</section>
