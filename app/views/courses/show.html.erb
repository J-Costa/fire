<section class="bg-gray-50">
  <div class="p-8 mt-12 md:p-12 lg:px-16 lg:py-24">
    <div class="mx-auto max-w-lg text-center">
      <h2 class="text-2xl font-bold text-gray-900 md:text-3xl">
        <%= @course.name %>
      </h2>
      <p class="text-gray-500 sm:mt-4 sm:block">
        <%= @course.description %>
      </p>
    </div>
    <div class="mx-auto mt-16 mb-16 max-w-lg text-center">
      <h2 class="text-xl font-bold text-gray-900 md:text-3xl">
        Mais informações sobre o curso
      </h2>
      <p class="text-gray-500 sm:mt-4 sm:block">
        <%= @course.details %>
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-xl">
      <%= form_with url: new_contact_path, method: :get, local: true, class: "sm:flex sm:gap-4" do |form| %>
        <div class="sm:flex-1">
          <%= form.label :email, "Email", class: "sr-only" %>
          <%= form.email_field :email, placeholder: "Email", class: "w-full rounded-md border-gray-200 bg-white p-3 text-gray-700 shadow-xs transition focus:border-white focus:ring-3 focus:ring-yellow-400 focus:outline-hidden" %>
        </div>
        <%= form.hidden_field :course_id, value: @course.id %>
        <%= form.submit "Inscreva-se", class: "group mt-4 flex w-full items-center justify-center gap-2 rounded-md bg-red-600 px-5 py-3 text-white transition focus:ring-3 focus:ring-yellow-400 focus:outline-hidden sm:mt-0 sm:w-auto"  do %>
          <svg class="size-5 shadow-sm rtl:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        <% end %>
      <% end %>
    </div>
    <div class="mx-auto mt-16 mb-14 max-w-2xl py-16  sm:mt-20 lg:mt-24 lg:max-w-none">
      <h1 class="text-xl font-bold mb-4">Cursos que também podem ser do seu interesse:</h1>
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        <% @featured_courses.each do |course| %>
          <div class="flex flex-col">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-gray-900">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-red-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
              </svg>
              <%= course.name %>
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600">
              <p class="flex-auto"><%= course.description %></p>
              <p class="mt-6">
                <%= link_to course_path(course.id), class: "text-sm font-semibold leading-6 text-red-600" do %>
                  Saiba mais <span aria-hidden="true">→</span>
                <% end %>
              </p>
            </dd>
          </div>
        <% end %>
      </dl>
      <p class="text-gray-500 mt-4">Explore outros cursos que podem complementar sua formação.</p>
      <%= link_to 'Ver mais', courses_path, class: 'text-blue-600 hover:underline mt-4' %>
    </div>
  </div>
</section>
